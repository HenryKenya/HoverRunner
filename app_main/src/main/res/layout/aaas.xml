<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="?attr/hover_primaryColor"
        tools:ignore="Overdraw"
        android:fitsSystemWindows="true"
        android:id="@+id/mainBackground"
        >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/animationBackground"
            android:layout_height="0dp"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-120dp"
                android:layout_weight="1">
            <ImageView android:id="@+id/end_image"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:src="@drawable/ic_runner_logo"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:contentDescription="@string/hsdk_response_ic"/>

            <TextSwitcher
                    android:id="@+id/textswitcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:inAnimation="@android:anim/fade_in"
                    android:outAnimation="@android:anim/fade_out" tools:ignore="UselessParent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="?attr/hover_textColor"
                        android:text="@string/hsdk_wait"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="?attr/hover_textColor"
                        android:text="@string/hsdk_success"/>
            </TextSwitcher>
        </LinearLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-110dp"
                    >
             <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="?attr/hover_textColor"
                     android:visibility="gone"
                     android:text="Average transaction time is 15 secs..."/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Continue"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/running_button_bg"
                    android:gravity="center_horizontal"
                    android:textColor="?attr/hover_textColor"/>
            </FrameLayout>
        </LinearLayout>

</RelativeLayout>